{
  "compilerOptions": {
    "incremental": true,
    "checkJs": true,
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "ts-build",
    "diagnostics": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "listEmittedFiles": true,
    "experimentalDecorators": true
  }
}